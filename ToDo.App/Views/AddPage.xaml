<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDo.App.Views.AddPage"
             Title="Add Page">
    <ContentPage.ToolbarItems>
        <ToolbarItem 
            x:Name="save"
            Text="Save"
            Clicked="save_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Label 
                Text="Name"
                FontSize="Medium"
                TextColor="{StaticResource colorPrimary}"
                />
            <Entry
                x:Name="name"/>
            <Label 
                Text="Description"
                FontSize="Medium"
                TextColor="{StaticResource colorPrimary}"
                />
            <Editor
                x:Name="description"
                HeightRequest="200"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>